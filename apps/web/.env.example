# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_DIGITAL_ANNUAL=price_xxx      # Digital Capsule yearly plan
STRIPE_PRICE_PAPER_ANNUAL=price_xxx        # Paper & Pixels yearly plan
STRIPE_PRICE_ADDON_EMAIL=price_xxx         # Email credit add-on ($0.99 base, volume discounts at backend)
STRIPE_PRICE_ADDON_PHYSICAL=price_xxx      # Physical mail credit add-on ($7.99 base, volume discounts at backend)
STRIPE_PRICE_TRIAL_PHYSICAL=price_xxx      # One-time $4.99 physical mail trial for Digital Capsule

# Resend Email
RESEND_API_KEY=re_xxx
# Resend Webhook Secret (for signature verification)
# Get from: Resend Dashboard → Webhooks → Create/View webhook → Copy "Signing Secret"
# Note: Secret is shown when creating webhook or on webhook details page
RESEND_WEBHOOK_SECRET=whsec_xxx

# Email Sender Addresses (Using letter.capsulenote.com subdomain)
# Notification emails (letter created, alerts, system notifications)
EMAIL_FROM_NOTIFICATION="Capsule Note <noreply@letter.capsulenote.com>"
# Letter delivery emails (scheduled letter deliveries to users)
EMAIL_FROM_DELIVERY="Your Capsule Note <letter@letter.capsulenote.com>"

# Legacy email sender (for backward compatibility - will use as fallback if above not set)
EMAIL_FROM=no-reply@letter.capsulenote.com

# Inngest Job Scheduling
INNGEST_SIGNING_KEY=signkey-prod-xxx
INNGEST_EVENT_KEY=test

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# Lob Physical Mail (Optional)
LOB_API_KEY=test_xxx
LOB_TEMPLATE_ID=tmpl_6207ac3b290af6c
LOB_TEMPLATE_VERSION_ID=vrsn_089c34d7e3d3feb

# ClickSend Physical Mail (Optional - Alternative)
CLICKSEND_USERNAME=your_username
CLICKSEND_API_KEY=xxx

# Postmark Email (Optional - Fallback Provider)
POSTMARK_SERVER_TOKEN=xxx

# Encryption (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
CRYPTO_MASTER_KEY=base64_encoded_32_byte_key_here

# Feature Flags (Unleash - Optional)
UNLEASH_API_URL=https://unleash.yourcompany.com/api
UNLEASH_API_TOKEN=xxx
UNLEASH_APP_NAME=capsulenote

# PostHog Analytics (Optional)
# EU Cloud (recommended for EU data residency)
NEXT_PUBLIC_POSTHOG_KEY=phc_xxx
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=https://api.axiom.co/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer xxx

# Sentry Error Tracking (Optional)
# Server-side DSN
SENTRY_DSN=https://xxx@xxx.ingest.us.sentry.io/xxx
# Client-side DSN (same as SENTRY_DSN, but exposed to browser)
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.us.sentry.io/xxx
# Sentry organization slug and project name (for source maps upload)
SENTRY_ORG=highcloudlimited
SENTRY_PROJECT=javascript-nextjs
# Auth token for uploading source maps (generate at: https://sentry.io/settings/auth-tokens/)
SENTRY_AUTH_TOKEN=sntrys_xxx

# Cron Secret (for Vercel Cron authentication)
CRON_SECRET=random_secret_string_here

# Skip env validation during build (for CI/CD)
# SKIP_ENV_VALIDATION=true
